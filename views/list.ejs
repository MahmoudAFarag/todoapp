<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="styles.css" />
    <title>To Do List</title>
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= kindOfDay %></h1>
    </div>
    <div class="box">
      <% newTask.forEach(task => { %>
      <div class="item">
        <input type="checkbox" id="checked<%= number %>" />
        <label for="checked<%= number %>"><%= task %></label>
      </div>
      <% number++ }) %>
      <form class="item" action="/" method="POST">
        <input type="text" name="task" id="task" placeholder="New item" autocomplete="off" required />
        <button type="submit" name="button">+</button>
      </form>
    </div>
  </body>
</html>
